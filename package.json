{
    "name": "juel",
    "version": "1.0.0",
    "description": "User Interface web components",
    "main": "dist/juel.js",
    "demo": "examples/demo.css",
    "files": [
        "dist/juel.js"
    ],
    "targets": {
        "main": {
            "distDir": "dist",
            "includeNodeModules": true
        },
        "demo": {
            "distDir": "./examples",
            "sourceMap": false
        }
    },
    "browserslist": "last 2 Chrome versions",
    "scripts": {
        "dev": "parcel juel.ts --no-optimize --no-scope-hoist",
        "build": "parcel build juel.ts --target main --no-source-maps && parcel build examples/demo.less --target demo",
        "serve": "npm run build && npx copyfiles dist/*.* examples -f && npx serve examples",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jollify-Software/juel.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Jollify-Software/juelissues"
    },
    "homepage": "https://github.com/Jollify-Software/juel#readme",
    "dependencies": {
        "@interactjs/interactjs": "^1.10.11",
        "@popperjs/core": "^2.10.1",
        "@swc/helpers": "^0.2.13",
        "@types/toastr": "^2.1.38",
        "bind-decorator": "^1.0.11",
        "driver.js": "^0.9.8",
        "golden-layout": "^2.3.0",
        "hammerjs": "^2.0.8",
        "jquery": "^3.5.1",
        "lit": "^2.2.0",
        "parcel": "^2.3.1",
        "proton-engine": "^4.1.3",
        "raf-manager": "^0.3.0",
        "tippy.js": "^6.2.7",
        "toastr": "^2.1.4",
        "vanilla-tilt": "^1.7.0"
    },
    "devDependencies": {
        "@parcel/optimizer-data-url": "^2.3.1",
        "@parcel/transformer-inline-string": "^2.3.1",
        "@parcel/transformer-less": "^2.3.1",
        "@parcel/transformer-typescript-tsc": "^2.3.1",
        "@types/bingmaps": "0.0.1",
        "@types/chart.js": "^2.9.32",
        "@types/hammerjs": "^2.0.36",
        "@types/jquery": "^3.3.38",
        "autoprefixer": "^9.8.6",
        "copyfiles": "^2.4.1",
        "less": "^3.12.2",
        "parcel-plugin-text": "^0.9.6",
        "postcss": "^8.3.7",
        "serve": "^13.0.4",
        "typescript": "^3.9.3"
    }
}
