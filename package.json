{
    "name": "juel",
    "version": "1.0.0",
    "description": "User Interface web components",
    "targets": {
        "default": {
            "distDir": "./dist",
            "sourceMap": false,
            "context": "browser",
            "outputFormat": "global"
        }
    },
    "scripts": {
        "dev": "parcel build juel.ts --no-optimize --no-scope-hoist && npx copyfiles dist/*.* examples -f",
        "build": "del .parcel-cache && parcel build juel.ts",
        "serve": "npm run dev && live-server --open=examples",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jollify-Software/juel.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Jollify-Software/juelissues"
    },
    "homepage": "https://github.com/Jollify-Software/juel#readme",
    "dependencies": {
        "@interactjs/interactjs": "^1.10.27",
        "@popperjs/core": "^2.10.1",
        "@svgdotjs/svg.js": "^3.2.4",
        "@swc/helpers": "^0.4.12",
        "@types/toastr": "^2.1.38",
        "animejs": "^3.2.2",
        "bind-decorator": "^1.0.11",
        "date-fns": "^4.1.0",
        "hammerjs": "^2.0.8",
        "highlight.js": "^11.10.0",
        "jquery": "^3.5.1",
        "leaflet": "^1.9.4",
        "lit": "^3.2.0",
        "tippy.js": "^6.2.7",
        "vanilla-tilt": "^1.8.1",
        "vexflow": "^4.2.5"
    },
    "devDependencies": {
        "@parcel/optimizer-data-url": "^2.12.0",
        "@parcel/transformer-inline-string": "^2.12.0",
        "@parcel/transformer-less": "^2.12.0",
        "@parcel/transformer-typescript-tsc": "^2.12.0",
        "@types/bingmaps": "0.0.1",
        "@types/chart.js": "^2.9.37",
        "@types/google.maps": "^3.57.0",
        "@types/hammerjs": "^2.0.36",
        "@types/jquery": "^3.5.14",
        "@types/leaflet": "^1.9.12",
        "autoprefixer": "^9.8.6",
        "copyfiles": "^2.4.1",
        "less": "^3.12.2",
